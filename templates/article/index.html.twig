{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Article index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Content</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>
                        {% if article.Category.name is defined %}
                            {{ article.Category.name }}
                        {% endif %}
                    </td>
                    <td>{{ article.content }}</td>
                    <td>
                        <a role="button" class="btn btn-primary" href="{{ path('article_show', {'id': article.id}) }}">show</a>
                        <a role="button" class="btn btn-secondary" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a role="button" class="btn btn-secondary" href="{{ path('article_new') }}">Create new</a>
    </div>
{% endblock %}
