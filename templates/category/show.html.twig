{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container">
        <h1>Category</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>

        <a role="button" class="btn btn-secondary" href="{{ path('category_index') }}">back to list</a>

        <a role="button" class="btn btn-secondary" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
